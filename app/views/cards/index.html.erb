<%
card_value = ["Ace", "2", "3", "4", "5", "6", "7", "8", "9", "10", "Jack", "Queen", "King"]
card_suit = ["Hearts", "Clubs", "Diamonds", "Spades"]

#Build a deck first so the deck has unique cards
deck = Array.new
for value in card_value
  for suit in card_suit
  deck.push("#{value} of #{suit}")
  end
end

# Shuffle the deck and pick a hand
deck = deck.shuffle
hand_size = 5
hand = deck[0, hand_size]

%>

<h1>Your Hand (<%= hand_size %> cards)</h1>

<ul>
<% for card in hand %>
  <li><%= card %></li>
<% end %>
</ul>


